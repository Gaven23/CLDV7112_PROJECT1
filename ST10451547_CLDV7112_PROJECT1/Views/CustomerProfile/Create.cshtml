@model ST10451547_CLDV7112_PROJECT1.Data.Entities.CustomerProfile;
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="col-12" style="padding-top:45px; margin: 0 auto;">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="section-title flex">
                <div class="flex">
                    <p class="blu-title bold"></p>
                </div>
            </div>

            <input class="edit-input-tag" type="text" asp-for="CustomerName" placeholder="CustomerName"><br><br>

            <input class="edit-input-tag" type="text" asp-for="CustomerAddress" placeholder="CustomerAddress"><br><br>
            <input class="edit-input-tag" type="text" asp-for="CustomerCity" placeholder="CustomerCity"><br><br>

            <!-- Picture Uploader -->
            <div class="form-group" style="padding-top:20px">
                <label for="CustomerPicture">Upload Picture:</label>
                <input type="file" id="CustomerPicture" name="CustomerPicture" class="form-control" />
            </div>

            <div class="form-group" style="padding-top:20px">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
